<%- include('../partials/header'); %>

<main class="main" id="bandSingleMain">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="/images/<%= data[0].band_image %>" alt="image of <%= name %>" class="img-fluid band-image rounded" />
            </div>
            <div class="col-md-6">
                <h2 class="sub-heading">
                    <%= name %>
                </h2>
                <div class="row">
                    <h3 class="h3-heading text-capitalize">albums from <%= name %></h3>
                    <% data.forEach(item => { %>
                        <div class="col-sm-4">
                            <figure class="figure band-figure-single">
                                <img src="/images/<%= item.album_cover  %>" alt="image of <%= item.title %>" class="figure-img rounded im-fluid">
                                <figcaption class="figure-caption">
                                    <a href="/album/<%= item.album_id %>">
                                        <%= item.title %>
                                    </a>
                                        <%= item.yr_released %>
                                </figcaption>
                            </figure>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>