<%- include('../partials/header'); %>
<main class="main" id="artistMain">
    <div class="container">
        <div class="row">
            <a href="/artist/sort/">sort artists</a>
            <a href="/artist/form">add an artist</a>
        </div>
        <div class="row">
            <% data.forEach(item => { %>
                <div class="col-md-3">
                    <figure class="figure artist-figure" id="artistFigure" <%= item.artist_id %>>
                        <img src="/images/<%= item.artist_image %>" alt="image of <%= item.fName %> <% item.lName %>" class="img-fluid figure-image rounded">
                        <figcaption class="figure-caption">
                            <a href="/artist/<%= item.artist_id %>">
                            <% if (item.alias == null) { %>
                                <%= item.fName %> <%= item.lName %>
                            <% } else { %>
                                <%= item.alias %>
                            <% } %>
                            </a>
                        </figcaption>
                    </figure>
                </div>
            <% }) %>
        </div>
    </div>
</main>

<%- include('../partials/footer'); %>