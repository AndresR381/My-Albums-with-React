<%- include('../partials/header'); %>

<main class="main" id="genreMain">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <% data.forEach(item => { %>
                        <div class="col-sm-3">
                            <figure class="figure">
                                <img src="/images/<%= item.album_cover %>" alt="<%= item.album_cover %> album cover" class="figure-img rounded img-fluid"/>
                                <figcaption class="figure-caption">
                                    <% if (<%= item.band == '') { %>
                                        <a href="/artist/<%= item.artist_id %>">
                                        <% if (item.alias == '') { %>
                                            <%= item.fName %> <%= item.lName %>
                                        <% } else { %>
                                            <%= item.alias %>
                                        <% } %>
                                    </a>
                                    <% } else { %>
                                        <a href="/band/<%= item.band_id %>"><%= item.band %></a>
                                    <% } %>

                                    <a href="album/<%= item.album_id %>"><%= item.title %></a>
                                </figcaption>
                            </figure>
                        </div>
                    <% }) %>
                </div>
            </div>
            <%- include('../partials/aside') %>
        </div>
    </div>
</main>

<%- include('../partials/footer'); %>